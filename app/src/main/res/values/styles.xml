<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_header</item>
        <item name="android:textColorSecondary">@color/primary_text_body</item>
    </style>

    <!-- Edit Text variation style -->
    <style name="EditTextVariation">
        <item name="android:textColorHint">@color/light_hint_text</item>
        <item name="colorControlNormal">@color/primary_text_header</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:backgroundTint">@color/light_background_highlights</item>
        <item name="android:textColor">@color/primary_text_header</item>
        <item name="android:layout_marginEnd">72dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Text View variation style for Headers -->
    <style name="TextViewHeader">
        <item name="android:textColor">@color/primary_text_header</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text View variation style for content body -->
    <style name="TextViewBody">
        <item name="android:textColor">@color/primary_text_body</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Text View variation style for Headers in EXIF settings-->
    <style name="TextViewHeaderExif">
        <item name="android:textColor">@color/primary_text_header</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Text View variation style for content bodies in EXIF settings -->
    <style name="TextViewBodyExif">
        <item name="android:textColor">@color/primary_text_body</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text View variation style for Headers -->
    <style name="TextViewHeaderSettings">
        <item name="android:textColor">@color/primary_text_header</item>
        <item name="android:textSize">36sp</item>
    </style>


    <!-- Spinner View Header -->
    <style name="Spinner">
        <item name="android:textColor">@color/primary_text_header</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


</resources>
