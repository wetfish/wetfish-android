<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        style="@style/TextViewBodyExif"
        android:id="@+id/tv_exif_data_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optical Something"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/TextViewBodyExif"
        android:id="@+id/tv_exif_data_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_exif_data_tag"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        style="@style/TextViewBodyExif"
        android:id="@+id/cb_exif_data_deletion_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Data"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>